@model BankStatementAnalyzer.SuperAdmin.ViewModels.AccountViewModel.LoginViewModel

@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="page">
    <div class="page-single">
        <div class="container">
            @if (!Html.ViewData.ModelState.IsValid)
            {
                <div class="row">
                    <div class="col-12 no-padding">
                        <div class="alert alert-danger alert-dismissible" role="alert">
                            <h4><i class="icon fa fa-ban"></i> Alert!</h4>
                            @Html.ValidationSummary()
                        </div>
                    </div>
                </div>
            }
            <div class="row">
                <div class="col col-login mx-auto">
                    <div class="text-center mb-6">
                        <img src="~/Content/theme/images/logo/dmlogo.jpg" class="h-8" alt="" />
                    </div>
                    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "card" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="card-body p-6">
                            <div class="card-title">Login to your account</div>
                            <div class="form-group">
                                <label class="form-label">Email address</label>
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Email", @autocomplete = "Off" })
                            </div>
                            <div class="form-group">
                                <label class="form-label">
                                    Password
                                    @*<a href="@Url.Action("ForgetPassword","Account")" class="float-right small">I forgot password</a>*@
                                </label>
                                @Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeholder = "Password" })
                            </div>
                            <div class="form-group">
                                <label class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" />
                                    <span class="custom-control-label">Remember me</span>
                                </label>
                            </div>
                            <div class="form-footer">
                                <button type="submit" class="btn btn-primary btn-block">Sign in</button>
                            </div>
                        </div>

                    }
                    @if (ViewBag.FirstUser)
                    {
                        <div class="text-center text-muted">
                            Don't have account yet? <a href="@Url.Action("Register")">Sign up</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>