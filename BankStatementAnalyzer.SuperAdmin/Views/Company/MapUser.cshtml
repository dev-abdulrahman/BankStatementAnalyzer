@model BankStatementAnalyzer.SuperAdmin.ViewModels.UsersVM.UserCompany
@{
    ViewBag.Title = "MapUser";
}

<div class="row">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Map user and company</h3>
            </div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.Label("Map users with company", htmlAttributes: new { @class = "control-label col-md-6" })
                        <div class="col-md-8">
                            @Html.ListBoxFor(model => model.Users, (IEnumerable<SelectListItem>)ViewBag.Users, new { @class = "selectize-control form-control" })
                            @Html.ValidationMessageFor(model => model.Users, "", new { @class = "text-danger" })
                        </div>
                        <p class="font-weight-bold text-red pl-3">Select single or multiple users to map with company.</p>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </div>
                }
                <div>
                    @Html.ActionLink("Back to List", "Index")
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">List of mapped users</h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table card-table table-vcenter text-nowrap datatable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayName("UserName")
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.MappedUsers)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserName)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $('.selectize-control').selectize();
    </script>
    <script>
        $('.datatable').DataTable();
    </script>
}
