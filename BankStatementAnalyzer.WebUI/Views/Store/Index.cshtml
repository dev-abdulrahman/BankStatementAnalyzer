@model IEnumerable<BankStatementAnalyzer.Models.Store>
@{
    ViewBag.Title = "Index";
    ViewBag.MainHeading = "Store";
    ViewBag.BoxHeader = "Store List";
}

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayName("Insta Service")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <div style="height:30px;width:400px;overflow-y:scroll">
                        @Html.DisplayFor(modelItem => item.Address)
                    </div>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                @if (item.IsInstaServiceProvided)
                {
                    <td>
                        <span class="btn btn-success btn-round btn-sm">Yes</span>
                    </td>
                }
                else
                {
                    <td>
                        <span class="btn btn-warning btn-round btn-sm">No</span>
                    </td>
                }
                @if (item.Status)
                {
                    <td>
                        <span class="btn btn-success btn-round btn-sm">Active</span>
                    </td>
                }
                else
                {
                    <td>
                        <span class="btn btn-warning btn-round btn-sm">In-Active</span>
                    </td>
                }
                <td>
                    <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown">Actions</button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="@Url.Action("Edit","Store",new { id = item.ID})">Edit</a>
                        <a class="dropdown-item" href="@Url.Action("Delete","Store",new { id = item.ID})">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts{
    <script>
        $('.table').DataTable({"order": [[0, "desc"]]});
    </script>
}