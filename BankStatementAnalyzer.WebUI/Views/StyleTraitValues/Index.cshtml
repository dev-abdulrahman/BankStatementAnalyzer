@model IEnumerable<BankStatementAnalyzer.WebUI.ViewModels.StyleTraitValues>

@{
    ViewBag.Title = "Index";
    ViewBag.MainHeading = "StyleTraitValue Details";
    ViewBag.BoxHeader = "StyleTraitValue List";
}


<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                StyleTrait
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>

            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StyleTrait)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown">Actions</button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="@Url.Action("Edit","StyleTraitValues",new { id = item.Id})">Edit</a>
                        <a class="dropdown-item" href="@Url.Action("Delete","StyleTraitValues",new { id = item.Id})">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


@section scripts{
    <script>
        $(document).ready(function () {
            $('.table').DataTable({"order": [[0, "desc"]]});
        });
    </script>
}