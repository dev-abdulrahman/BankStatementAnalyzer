@model IEnumerable<BankStatementAnalyzer.WebUI.ViewModels.CategorySubCategoryVM>

@{
    ViewBag.Title = "Index";
    ViewBag.MainHeading = "Subcategory Details";
    ViewBag.BoxHeader = "Subcategory List";
}

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubCategory.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubCategory.Key)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubCategory.Status)
            </th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubCategory.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.SubCategory.Key)
                </td>
                @if (item.SubCategory.Status)
                {
                    <td>
                        <span class="btn btn-success btn-round btn-sm">Active</span>
                    </td>
                }
                else
                {
                    <td>
                        <span class="btn btn-warning btn-round btn-sm">In-Active</span>
                    </td>
                }
                <td>
                    <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown">Actions</button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="@Url.Action("Edit","Subcategory",new { id = item.SubCategory.ID})">Edit</a>
                        <a class="dropdown-item" href="@Url.Action("Delete","Subcategory",new { id = item.SubCategory.ID})">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>



</table>

@section scripts{
    <script>
        $(document).ready(function () {
            $('.table').DataTable({ "order": [[0, "desc"]] });
        });
    </script>
}