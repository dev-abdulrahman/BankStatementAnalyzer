@model BankStatementAnalyzer.Models.TimeSlot

@{
    ViewBag.Title = "Edit";
    ViewBag.MainHeading = "Available - Time";
    ViewBag.BoxHeader = "Edit Available - Time";

    var startTime = Model.From.ToString("hh:mm tt");
    var endTime = Model.To.ToString("hh:mm tt");
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.From, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="input-group col-lg-6" id="calenderIcon">
                @Html.EditorFor(model => model.From, new { htmlAttributes = new { @class = "form-control datepicker", @autocomplete = "off" } })
                @Html.ValidationMessageFor(model => model.From, "", new { @class = "text-danger" })
                <div class="input-group-prepend">
                    <div class="input-group-text">
                        <i class="fa fa-calendar"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.To, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="input-group col-lg-6" id="calenderIcon2">
                @Html.EditorFor(model => model.To, new { htmlAttributes = new { @class = "form-control datepicker2", @autocomplete = "off" } })
                @Html.ValidationMessageFor(model => model.To, "", new { @class = "text-danger" })
                <div class="input-group-prepend">
                    <div class="input-group-text">
                        <i class="fa fa-calendar"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                <div class="checkbox">
                    @Html.CheckBoxFor(m => m.Status, new { @class = "filled-in chk-col-green" })
                    @Html.LabelFor(m => m.Status)
                </div>
                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                @Html.Partial("FooterButtonsPV")
            </div>
        </div>
    </div>
}

@section scripts{
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">
    <script src="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>

    <script type="text/javascript">
        $('#calenderIcon').click(function () {
            $(function () {
                $('.datepicker').timepicker({
                    timeFormat: 'h:mm p',
                    interval: 60,
                    minTime: '9',
                    maxTime: '11:00pm',
                    defaultTime: '@startTime',
                    startTime: '9:00',
                    dynamic: false,
                    dropdown: true,
                    scrollbar: true
                });
            });
        });

        $('#calenderIcon2').click(function () {
            $(function () {
                $(".datepicker2").timepicker({
                    timeFormat: 'h:mm p',
                    interval: 60,
                    minTime: '11',
                    maxTime: '11:00pm',
                    defaultTime: '@endTime',
                    startTime: '11:00',
                    dynamic: false,
                    dropdown: true,
                    scrollbar: true
                });
            })
        });
    </script>
}