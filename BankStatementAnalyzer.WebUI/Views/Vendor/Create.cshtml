        <div class="form-group">
            @Html.LabelFor(model => model.VendorType, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.RadioButtonFor(model => model.VendorType, BankStatementAnalyzer.Models.VendorType.InHouse, new { @id = BankStatementAnalyzer.Models.VendorType.InHouse, @class = "with-gap" })
                @Html.Label(BankStatementAnalyzer.Models.VendorType.InHouse.ToString())
