@model BankStatementAnalyzer.WebUI.ViewModels.CarouselViewModel

@{
    ViewBag.Title = "Create";
    ViewBag.MainHeading = "Create";
    ViewBag.BoxHeader = "Create Carousel";
}

@using (Html.BeginForm("Create", "Carousel", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.Classified, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.DropDownListFor(modelItem => Model.SelectedClassified, Model.Classified, "Select Classified", new { @class = "form-control", @required = "required" })
                @Html.ValidationMessageFor(model => model.Classified, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Images, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                <div class="checkbox">
                    @Html.TextBoxFor(model => model.Images, "", new { @class = "form-control", @type = "file", @multiple = "multiple" })
                    @Html.ValidationMessageFor(model => model.Images, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}