@model BankStatementAnalyzer.WebUI.ViewModels.HomeScreenViewModel

@{
    ViewBag.Title = "Edit";
    ViewBag.MainHeading = "Edit";
    ViewBag.BoxHeader = "Edit HomeScreen";
}

@using (Html.BeginForm("Edit", "HomeScreenLayout", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            @Html.HiddenFor(modelItem => Model.Row)
            @Html.HiddenFor(modelItem => Model.Column)
            @Html.LabelFor(modelItem => modelItem.Category)
            <div class="col-md-6">
                @Html.DropDownListFor(modelItem => Model.SelectedCategory, Model.Category, "Select Category",  new { @class = "form-control", @required = "required" })
                @Html.ValidationMessageFor(x => x.SelectedCategory, "", new { @class = "Text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(modelItem => modelItem.Icons)
            <div class="col-md-6">
                @Html.DropDownListFor(modelItem => Model.SelectedIcon, Model.Icons, "Select Icon", new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.SelectedIcon, "", new { @class = "Text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(modelItem => modelItem.Color)
            <div class="col-md-6">
                @Html.DropDownListFor(modelItem => Model.SelectedColor, Model.Color, "Select Color", new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.SelectedColor, "", new { @class = "Text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}