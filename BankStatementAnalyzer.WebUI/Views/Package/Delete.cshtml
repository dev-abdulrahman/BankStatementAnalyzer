@model BankStatementAnalyzer.Models.Package

@{
    ViewBag.Title = "Delete";
    ViewBag.MainHeading = "Package";
    ViewBag.BoxHeader = "Delete Package";
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @if (!Model.CanDelete)
            {
                <input type="submit" value="Delete" class="btn btn-danger" />
            }
            else
            {
                <p class="text-danger">You cannot delete this order because it is used in current orders.</p>
                <input type="button" disabled value="Delete" class="btn btn-danger" />
            }
        </div>
    }
</div>