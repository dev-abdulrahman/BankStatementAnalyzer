@model BankStatementAnalyzer.WebUI.ViewModels.AccountViewModel.LocalPasswordModel

@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="row align-items-center justify-content-md-center h-p100">
    <div class="col-lg-8 col-md-11 col-12">
        @if (!Html.ViewData.ModelState.IsValid)
        {
            <div class="row">
                <div class="col-12 no-padding">
                    <div class="alert alert-danger alert-dismissible">
                        <h4><i class="icon fa fa-ban"></i> Alert!</h4>
                        @Html.ValidationSummary()
                    </div>
                </div>
            </div>
        }
        <div class="row align-items-center justify-content-md-center h-p100" data-overlay-light="9">
            <div class="col-lg-5 col-md-6 col-12">
                <div class="p-40 text-center content-bottom">
                    <img src="../../../images/logo/RN_logo.jpg" class="rounded-circle b-2 p-10 border-dark" alt="">
                </div>
            </div>
            <div class="col-lg-7 col-md-6 col-12">
                <div class="p-20 content-bottom">
                    <div class="content-top-agile">
                        <h2>Get started with Us</h2>
                        <p class="text-fade">Change password to start your session</p>
                    </div>
                    @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label>You're logged in as <strong>@User.Identity.Name</strong>.</label>
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(x => x.NewPassword, new { @class = "form-control", @placeholder = "New Password" })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm Password" })
                        </div>
                        <div class="row">
                            <div class="col-12 text-center">
                                <button type="submit" class="btn btn-yellow btn-block margin-top-10">Submit</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>