@model BankStatementAnalyzer.WebUI.ViewModels.AccountViewModel.LoginViewModel

@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="row align-items-center justify-content-md-center h-p100">
    <div class="col-lg-8 col-md-11 col-12">
        @if (!Html.ViewData.ModelState.IsValid)
        {
            <div class="row">
                <div class="col-12 no-padding">
                    <div class="alert alert-danger alert-dismissible">
                        <h4><i class="icon fa fa-ban"></i> Alert!</h4>
                        @Html.ValidationSummary()
                    </div>
                </div>
            </div>
        }
        <div class="row align-items-center justify-content-md-center h-p100" data-overlay-light="9">
            <div class="col-lg-5 col-md-6 col-12">
                <div class="p-40 text-center content-bottom">
                    <!--<img src="../../../images/logo/RN_logo.jpg" class="rounded-circle b-2 p-10 border-dark" alt="">-->
                    <img src="../../../images/logo/BSA.jpg" class="rounded" alt="">
                </div>
            </div>
            <div class="col-lg-7 col-md-6 col-12">
                <div class="p-20 content-bottom">
                    <div class="content-top-agile">
                        <h2>Get started with Us</h2>
                        <p class="text-fade">Sign in to start your session</p>
                    </div>
                    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <div class="input-group mb-3">
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Email", @autocomplete = "Off" })
                                <div class="input-group-prepend">
                                    <span class="input-group-text bg-danger border-danger"><i class="ti-user"></i></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group mb-3">
                                @Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeholder = "Password" })
                                <div class="input-group-prepend">
                                    <span class="input-group-text bg-danger border-danger"><i class="ti-lock"></i></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="">
                                    <input type="checkbox" id="remember" class="custom-control-input" name="RememberMe" value="true">
                                    <label for="remember">Remember me?</label>
                                </div>
                            </div>
                            <div class="col-12 text-center">
                                <button type="submit" class="btn btn-yellow btn-block margin-top-10">SIGN IN</button>
                            </div>
                        </div>
                    }
                    @if (ViewBag.FirstUser)
                    {
                        <div class="text-center">
                            <p class="mb-0 mt-10">Don't have an account? <a href="@Url.Action("Register")" class="text-blue ml-5">Sign Up</a></p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>