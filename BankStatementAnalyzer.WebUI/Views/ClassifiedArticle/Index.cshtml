@model IEnumerable<BankStatementAnalyzer.WebUI.ViewModels.ClassifiedArticleVM>

@{
    ViewBag.Title = "Index";
    ViewBag.MainHeading = "Classified Article";
    ViewBag.BoxHeader = "Article List";
}

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Heading)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShortDescription)
            </th>
            <th>
                Preview Article
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Heading)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShortDescription)
            </td>
            <td>
                <a href="@Url.Action("GetArticle","ClassifiedArticle",new { articleId = item.Id})" target="_blank"><i class="fa fa-external-link" aria-hidden="true"></i> Preview</a>
            </td>
            <td>
                <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown">Actions</button>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="@Url.Action("Edit","ClassifiedArticle",new { id = item.Id})">Edit</a>
                    <a class="dropdown-item" href="@Url.Action("Delete","ClassifiedArticle",new { id = item.Id})">Delete</a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>
@section scripts{
    <script>
        $('.table').DataTable({ "order": [[0, "asc"]] });
    </script>
}