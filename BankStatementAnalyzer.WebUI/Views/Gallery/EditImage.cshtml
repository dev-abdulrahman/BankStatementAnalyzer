@model BankStatementAnalyzer.Models.Gallery
@{
    ViewBag.Title = "Edit Image";
    ViewBag.BoxHeader = "Edit Image";
    ViewBag.MainHeading = "Edit Image";
}

@using (Html.BeginForm("EditImage", "Gallery", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="box">
        <input type="hidden" name="attacthmentId" value="@Model.File.ID" />
        <div class="box-body">
            <div class="row box box-default col-2">
                <img class="card-img-top img-responsive" src="@(Url.Content("/images/gallery/") +  Model.File.Path)" alt="Card image cap">
            </div>
            <div class="form-group">
                @Html.Label("Upload", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="input-group col-md-6">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" name="file" required accept="image/*"
                               aria-describedby="inputGroupFileAddon01">
                        <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}